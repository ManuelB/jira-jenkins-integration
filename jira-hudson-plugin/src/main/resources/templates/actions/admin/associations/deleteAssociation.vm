<head>
	<meta name="decorator" content="admin"/>
	<meta name="admin.active.section" content="admin_plugins_menu/hudson-section">
	<meta name="admin.active.tab" content="hudson_associations_administer">
</head>

<script type="text/javascript">
    function init()
    {
        document.title='$i18n.getText("hudson.associations.delete.header.title")';
    }
    window.onload=init;
</script>

#set($i18n = $action)
<form onsubmit="if (this.submitted) return false; this.submitted = true; return true" name="jiraform" method="post" action="DeleteAssociation.jspa">
<input type="hidden" name="associationId" value="${associationId}" />
<div class="jiraform maxWidth">
	<div class="jiraformheader">
		<h3 class="formtitle">
			$i18n.getText("hudson.associations.delete.title")
		</h3>
		<br/>
		$i18n.getText("hudson.associations.delete.description")<br />
	</div>
	<div class="jiraformcontents">
		<table class="grid maxWidth">
			<tr>
				<td>
					${i18n.getText("hudson.associations.delete.confirm", $project.name, $jobName)}
				</td>
			</tr>
            <tr>
                <td class="fullyCentered jiraformfooter" >
                    <input type="submit" name="delete" value="$i18n.getText("common.words.delete")" accesskey="S"
                    	title="Press Alt+Shift+S to submit form" class="spaced" />
                    <input id="cancelButton" type="button" accesskey="`" title="$i18n.getText("common.forms.cancel") (Alt+Shift + `)"
                    	name="AdministerAssociations.jspa" value="$i18n.getText("common.forms.cancel")"
                    	onclick="location.href='AdministerAssociations.jspa'" />
                </td>
            </tr>
		</table>
	</div>
</div>
</form>
