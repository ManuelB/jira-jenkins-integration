<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>com.marvelution</groupId>
		<artifactId>marvelution</artifactId>
		<version>1.2-SNAPSHOT</version>
	</parent>
	<groupId>com.marvelution.jira.plugins</groupId>
	<artifactId>marvelution-jira-hudson-integration</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	
	<modules>
		<module>hudson-jira-api</module>
		<module>hudson-jiraapi-plugin</module>
		<module>jira-hudson-plugin</module>
	</modules>
	
	<name>Marvelution JIRA Hudson Integration</name>
	<description>JIRA Plugin to integrate Hudson CI like with Bamboo</description>
	<url>http://www.marvelution.com/marvelution-jira-hudson-integration/</url>
	<inceptionYear>2009</inceptionYear>
	<organization>
		<name>Marvelution</name>
		<url>http://www.marvelution.com/</url>
	</organization>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	
	<scm>
		<connection>scm:svn:http://svn.marvelution.com/marvelution/marvelution-jira-hudson-integration/trunk</connection>
		<developerConnection>scm:svn:http://svn.marvelution.com/marvelution/marvelution-jira-hudson-integration/trunk</developerConnection>
		<url>http://svn.marvelution.com/marvelution/marvelution-jira-hudson-integration/trunk</url>
	</scm>
	<issueManagement>
		<system>JIRA</system>
		<url>http://jira.marvelution.com/browse/MARVJIRAHUDSON</url>
	</issueManagement>
	<ciManagement>
		<system>Hudson</system>
		<url>http://ci.marvelution.com/hudson</url>
		<notifiers>
			<notifier>
				<type>mail</type>
				<configuration>
					<address>build-notifications@marvelution.com</address>
				</configuration>
			</notifier>
		</notifiers>
	</ciManagement>
	<distributionManagement>
		<site>
			<id>marvelution.website</id>
			<url>scp://marvelution.com/home/markrekveld/marvelution.com/marvelution-jira-hudson-integration/</url>
		</site>
	</distributionManagement>
	
	<properties>
		<project.jdk.revision>1.5</project.jdk.revision>
		<hudson.version>1.307</hudson.version>
		<atlassian.jira.version>3.13.4</atlassian.jira.version>
		<stagingSiteURL>scp://marvelution.com/home/markrekveld/staging.marvelution.com/marvelution-jira-hudson-integration/</stagingSiteURL>
		<jiraDownloadBaseUrl>http://repository.marvelution.com/content/groups/marvelution/com/marvelution/jira/plugins/jira-hudson-plugin</jiraDownloadBaseUrl>
		<hudsonDownloadBaseUrl>http://repository.marvelution.com/content/groups/marvelution/com/marvelution/jira/plugins/hudson-jiraapi-plugin</hudsonDownloadBaseUrl>
		<pmd.ruleset.location>http://svn.marvelution.com/marvelution/resources/pmd/marvelution-atlassian-related-pmd-ruleset.xml</pmd.ruleset.location>
		<checkstyle.config.location>http://svn.marvelution.com/marvelution/resources/checkstyle/marvelution-atlassian-related-checkstyle-config.xml</checkstyle.config.location>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.5</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<developers>
		<developer>
			<id>markrekveld</id>
			<name>Mark Rekveld</name>
			<url>http://www.marvelution.com</url>
			<organization>Marvelution</organization>
			<email>markrekveld@marvelution.com</email>
			<organizationUrl>http://www.marvelution.com</organizationUrl>
			<timezone>+1</timezone>
			<roles>
				<role>Marvelution Member</role>
			</roles>
		</developer>
	</developers>
</project>
